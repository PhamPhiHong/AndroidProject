<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo2"
        android:padding="30dp" />

    <TextView
        android:id="@+id/txt99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt99"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:text="Trạng thái thiết bị: "/>

    <TextView
        android:id="@+id/txtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt99"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Đèn"/>

    <TextView
        android:id="@+id/txtTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTest"
        android:layout_centerHorizontal="true"
        android:text="Cửa"/>

    <TextView
        android:id="@+id/txtTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTest1"
        android:layout_centerHorizontal="true"
        android:text="Máy bơm"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTest2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/switchid"
        android:text="Đèn"
        android:textOff="Off"
        android:textOn="On" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchid"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/switchid1"
        android:text="Cửa"
        android:textOff="Off"
        android:textOn="On" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchid1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/switchid2"
        android:text="Máy Bơm"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/btnT1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/switchid2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/mic" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnT1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="LogOut"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Trạng thái module" />
</RelativeLayout>